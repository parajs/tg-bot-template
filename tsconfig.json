{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "nodenext",                               
    "rootDir": "./src",                                 
    "moduleResolution": "nodenext",                    
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                
  }
}
